<UserControl x:Class="Aura.Views.Controls.MainControlContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:Aura.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainControlContainer}">
    <Grid>
        <Controls:DashboardControl Visibility="{Binding IsDashboardControlVisible}" Margin="0,40,0,0"/>
        <Controls:SettingsControl Visibility="{Binding IsSettingsControlVisible}" Margin="0,40,0,0"/>
        <Button Content="Settings" Command="{Binding GoToSettingsClick}" HorizontalAlignment="Left" Margin="695,10,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
