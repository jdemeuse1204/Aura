<UserControl x:Class="Aura.Views.Controls.MainControlContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:Aura.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainControlContainer}">
    <Grid>
        <Canvas Visibility="{Binding IsDashboardControlVisible}" Margin="0,40,15,15">
            <Controls:DashboardControl Height="410" Width="800" />
        </Canvas>

        <Canvas Visibility="{Binding IsSettingsControlVisible}" Margin="0,40,15,15">
            <Controls:SettingsControl/>
        </Canvas>
        <Button Content="Settings" Visibility="{Binding IsDashboardControlVisible}" Command="{Binding GoToSettingsClick}" HorizontalAlignment="Left" Margin="695,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Dashboard" Visibility="{Binding IsSettingsControlVisible}" Command="{Binding GoToDashboardClick}" HorizontalAlignment="Left" Margin="695,10,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
